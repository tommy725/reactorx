{
  "private": true,
  "scripts": {
    "start": "npm run prepare",
    "bootstrap": "lerna bootstrap",
    "fmt": "npx prettier --write @reactorx/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "tsc --noEmit && jest --coverage",
    "build": "lerna exec -- rollup -c ../../rollup.config.ts",
    "prepare": "npm run bootstrap && npm test && npm run build",
    "dev": "webpack-browser-sync --config webpack.config.ts --historyApiFallback --index=../index.html",
    "pkg": "webpack --config webpack.config.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-typescript": "7.3.3",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@types/history": "4.7.2",
    "@types/html-webpack-plugin": "3.2.0",
    "@types/jest": "24.0.11",
    "@types/lodash": "4.14.123",
    "@types/react": "16.8.7",
    "@types/react-dom": "16.8.2",
    "@types/webpack": "4.4.25",
    "babel-loader": "8.0.5",
    "babel-plugin-pure-calls-annotation": "0.2.0",
    "glamor": "2.20.40",
    "history": "4.7.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "jest": "24.4.0",
    "lerna": "3.13.1",
    "lint-staged": "8.1.5",
    "lodash": "4.17.11",
    "lodash-es": "4.17.11",
    "prettier": "1.16.4",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "redux-logger": "3.0.6",
    "rollup": "1.6.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-typescript": "1.0.0",
    "terser-webpack-plugin": "1.2.3",
    "ts-jest": "24.0.0",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.3",
    "typescript": "3.3.x",
    "webpack": "4.29.6",
    "webpack-browser-sync": "0.11.0",
    "webpack-cli": "3.2.3"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@reactorx/(.*)": "<rootDir>/@reactorx/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "dependencies": {
    "@types/node": "11.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna bootstrap",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
