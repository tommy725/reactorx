{
  "private": true,
  "scripts": {
    "start": "npm run prepare",
    "bootstrap": "lerna bootstrap",
    "fmt": "npx prettier --write @reactorx/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "tsc --noEmit && jest --coverage",
    "build": "lerna exec -- rollup -c ../../rollup.config.ts",
    "prepare": "npm run bootstrap && npm test && npm run build",
    "dev": "webpack-browser-sync --config webpack.config.ts --historyApiFallback --index=../index.html",
    "pkg": "webpack --config webpack.config.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-typescript": "7.1.0",
    "@commitlint/cli": "7.3.1",
    "@commitlint/config-conventional": "7.3.1",
    "@types/history": "4.7.2",
    "@types/html-webpack-plugin": "3.2.0",
    "@types/jest": "23.3.12",
    "@types/lodash": "4.14.119",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "@types/webpack": "4.4.22",
    "babel-loader": "8.0.5",
    "babel-plugin-pure-calls-annotation": "0.2.0",
    "glamor": "2.20.40",
    "history": "4.7.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lerna": "3.10.5",
    "lint-staged": "8.1.0",
    "lodash": "4.17.11",
    "lodash-es": "4.17.11",
    "prettier": "1.15.3",
    "react": "16.8.0-alpha.0",
    "react-dom": "16.8.0-alpha.0",
    "redux-logger": "3.0.6",
    "rollup": "1.1.0",
    "rollup-plugin-babel": "4.3.0",
    "rollup-plugin-typescript": "1.0.0",
    "terser-webpack-plugin": "1.2.1",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.3",
    "ts-node": "7.0.1",
    "typescript": "3.2.2",
    "webpack": "4.28.4",
    "webpack-browser-sync": "0.10.0",
    "webpack-cli": "3.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@reactorx/(.*)": "<rootDir>/@reactorx/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "dependencies": {
    "@types/node": "10.12.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna bootstrap",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
