{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "__types__/*"
      ]
    },
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es2015",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules/*"
  ]
}
